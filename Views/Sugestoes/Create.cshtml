@model PropertySugestaoModel

<div class="row 12">
    <div class="col-8">
        <div>
            <h2>Inserir sugestão</h2>
            <p>Relate aqui as sugestões para melhoria e erros para correção .</p>
        </div>
        <div class="card">
            <div class="card-body">
                <form method="POST" asp-action="Create">
                    <div>
                        <h5>sugestão</h5>
                        <textarea name="Registros" rows="11" class="col-12" required></textarea>
                    </div>
                    <div>
                        <input type="submit" value="Salvar">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>